# ============================================================================
# Smart Factory IoT Dashboard - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# Database Configuration
# ============================================================================
# MySQL database connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://root:password@localhost:3306/smart_factory_iot"

# ============================================================================
# Server Configuration
# ============================================================================
# Port on which the server will run (default: 3000)
PORT=3000

# Node environment (development or production)
NODE_ENV=development

# ============================================================================
# OAuth Configuration
# ============================================================================
# OAuth Server URL - The base URL of your OAuth server
# This is used for user authentication and session management
# Example: http://localhost:8080 or https://auth.example.com
OAUTH_SERVER_URL="http://localhost:8080"

# Application ID - Unique identifier for this application in the OAuth system
# Obtain this from your OAuth server admin panel
VITE_APP_ID="your-app-id-here"

# JWT Secret - Used for signing session tokens
# Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-key-here"

# Owner OpenID - The OpenID of the application owner
# This is used for owner-specific operations
OWNER_OPEN_ID="owner-open-id-here"

# ============================================================================
# Google Maps Configuration
# ============================================================================
# Google Maps Proxy API URL - The base URL of your maps proxy service
# This proxies requests to Google Maps API for security
# Example: https://forge.example.com or http://localhost:3001
BUILT_IN_FORGE_API_URL="http://localhost:3001"

# Google Maps Proxy API Key - Authentication key for the maps proxy
# Obtain this from your maps proxy service provider
BUILT_IN_FORGE_API_KEY="your-maps-api-key-here"

# Frontend Google Maps Configuration
# These are used by the client-side map component
VITE_FRONTEND_FORGE_API_URL="http://localhost:3001"
VITE_FRONTEND_FORGE_API_KEY="your-frontend-maps-api-key-here"

# ============================================================================
# OAuth Portal Configuration
# ============================================================================
# OAuth Portal URL - The URL where users are redirected for authentication
# Example: http://localhost:8080 or https://auth.example.com
VITE_OAUTH_PORTAL_URL="http://localhost:8080"

# ============================================================================
# Notification Services (Optional)
# ============================================================================
# Email API Key - For sending email notifications
# Obtain from your email service provider (SendGrid, AWS SES, etc.)
EMAIL_API_KEY="your-email-api-key-here"

# SMS API Key - For sending SMS notifications
# Obtain from your SMS service provider (Twilio, AWS SNS, etc.)
SMS_API_KEY="your-sms-api-key-here"

# ============================================================================
# AWS S3 Configuration (Optional)
# ============================================================================
# AWS Region
AWS_REGION="us-east-1"

# AWS Access Key ID
AWS_ACCESS_KEY_ID="your-access-key-id"

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# S3 Bucket Name
S3_BUCKET_NAME="your-bucket-name"

# ============================================================================
# LLM Configuration (Optional)
# ============================================================================
# OpenAI API Key - For AI-powered features
OPENAI_API_KEY="your-openai-api-key-here"

# ============================================================================
# Application Settings
# ============================================================================
# Enable debug logging
DEBUG=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
