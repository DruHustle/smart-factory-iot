# ============================================================================
# Smart Factory IoT Dashboard - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================================================
# Backend Services Configuration
# ============================================================================
# Render Backend Service
# Backend API endpoint deployed on Render
# Example: https://smart-factory-iot-api.onrender.com
VITE_API_URL="https://your-render-service.onrender.com/api"
# Backend server URL (for server-side operations)
BACKEND_URL="https://your-render-service.onrender.com"

# ============================================================================
# Database Configuration (Aiven)
# ============================================================================
# Aiven MySQL database connection string
# Format: mysql://username:password@host:port/database
# Get this from your Aiven dashboard
DATABASE_URL="mysql://user:password@your-aiven-host.aivencloud.com:3306/smart_factory_iot"

# ============================================================================
# Server Configuration
# ============================================================================
# Port on which the server will run (default: 3000)
# Note: Render will assign a PORT environment variable automatically
PORT=3000
# Node environment (development or production)
NODE_ENV=production

# ============================================================================
# Authentication Configuration
# ============================================================================
# JWT Secret - Used for signing session tokens
# Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET="your-strong-jwt-secret-key-here"

# ============================================================================
# Frontend Configuration
# ============================================================================
# Application ID and Title
VITE_APP_ID="smart-factory-iot"
VITE_APP_TITLE="Smart Factory IoT Dashboard"
# Favicon path (relative to public directory)
VITE_FAVICON_PATH="/favicon.ico"

# ============================================================================
# Google Maps Configuration
# ============================================================================
# Google Maps API Key
VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key-here"

# ============================================================================
# Notification Services (Optional)
# ============================================================================
# Email API Key - For sending email notifications
EMAIL_API_KEY="your-email-api-key-here"
# SMS API Key - For sending SMS notifications
SMS_API_KEY="your-sms-api-key-here"

# ============================================================================
# Application Settings
# ============================================================================
# Enable debug logging
DEBUG=false
# CORS allowed origins (comma-separated)
# For Render deployment, add your Render URL
CORS_ORIGINS="https://your-render-service.onrender.com,http://localhost:3000,http://localhost:5173"
# GitHub Pages deployment
# Set to true when deploying to GitHub Pages
GITHUB_PAGES_DEPLOYMENT=false

# ============================================================================
# Render-specific Configuration
# ============================================================================
# Render will automatically set these environment variables:
# - PORT: The port your service should listen on
# - RENDER_EXTERNAL_URL: Your service's external URL
# You can reference them in your code as process.env.RENDER_EXTERNAL_URL
