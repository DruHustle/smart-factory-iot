# ============================================================================
# Smart Factory IoT Dashboard - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================================================

# ============================================================================
# Backend Services Configuration (Render)
# ============================================================================
# VITE_API_URL: The public URL of your backend API on Render
# Example: https://smart-factory-iot-api.onrender.com/api
VITE_API_URL="https://your-render-service.onrender.com/api"

# BACKEND_URL: The base URL of your backend server
BACKEND_URL="https://your-render-service.onrender.com"

# ============================================================================
# Database Configuration (Aiven)
# ============================================================================
# DATABASE_URL: Aiven MySQL connection string
# Format: mysql://username:password@host:port/database?ssl-mode=REQUIRED
# Get this from your Aiven dashboard (MySQL > Overview > Connection Details)
DATABASE_URL="mysql://user:password@your-aiven-host.aivencloud.com:3306/smart_factory_iot?ssl-mode=REQUIRED"

# ============================================================================
# Authentication Configuration
# ============================================================================
# JWT_SECRET: Used for signing session tokens
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET="your-strong-jwt-secret-key-here"

# ============================================================================
# Server Configuration
# ============================================================================
# PORT: The port the server listens on (Render sets this automatically)
PORT=3000
NODE_ENV=production

# ============================================================================
# Application Settings
# ============================================================================
VITE_APP_ID="smart-factory-iot"
VITE_APP_TITLE="Smart Factory IoT Dashboard"
CORS_ORIGINS="https://your-render-service.onrender.com,http://localhost:3000,http://localhost:5173"
DEBUG=false
